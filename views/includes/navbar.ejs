<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>

    <!-- toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
      aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- collapsed content -->
    <div class="collapse navbar-collapse" id="mainNav">
      <!-- left links -->
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- search form: compact on small screens -->
      <form class="d-flex align-items-center  order-3 order-md-2" action="/listings" method="get" role="search">
        <div class="input-group m-auto">
          <!-- visible only on md+ (desktop) -->
          <input name="q" class="form-control search-input d-md-block" type="search"
            placeholder="Search destinations" aria-label="Search destinations">
          <!-- button always visible, text hidden on small screens -->
          <button class="btn btn-outline-secondary search-btn" type="submit" aria-label="Search">
            <i class="fa-solid fa-magnifying-glass"></i>
            <span class="d-none d-md-inline"> Search</span>
          </button>
        </div>
      </form>

      <!-- right links (single ms-auto via previous me-auto) -->
       
     <ul class="navbar-nav ms-auto order-2 order-md-3">
      <div class="sign mt-2 justify-content-between">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if(!currUser) { %>

          <div class="d-flex">
          
        <li class="nav-item align-self-end d-flex align-self-center"><a class="nav-link" href="/signup"><b>SignUp</b></a></li>
        <li class="nav-item ms-2 d-flex align-self-center"><a class="nav-link" href="/login"><b>Login</b></a></li>
        
        <% } %>
        <% if(currUser) { %>
        <li class="nav-item"><a class="nav-link" href="/logout"><b>Logout</b></a></li>
        <% } %>
        </div>
        </div>
      </ul>
      </div>
    </div>
  </div>
</nav>

<style>
  /* smooth movement */
  #filters {
    transition: margin-top 180ms ease;
  }
</style>



